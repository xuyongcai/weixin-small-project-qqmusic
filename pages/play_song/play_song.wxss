
 .bg_blur{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    background-size: cover;
    background-position: bottom center;
    /* 模糊 */
    filter: blur(30rpx);
    transform: scale(1.15);

} 

