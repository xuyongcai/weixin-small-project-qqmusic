/* 背景 */
 .bg_blur{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    overflow: hidden;     
} 
 .bg_blur  .bg_blur_inner{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    background-size: cover;
    background-position:bottom center;
    /* 模糊 */
    filter: blur(30rpx);
    transform: scale(1.15); 
 }
.bg_mask{
    opacity: 0.6;
    position: absolute;
    left: 0;
    /* 高度100%  top bottom */
    top: 0;
    bottom: 0;
    z-index: 2;
    width: 100%;
    background-color: #000;
}

