/* 头部  */
.play_header{
  position: relative;
  width: 100%;
  display: flex;
  background: rgba(0, 0, 0, 0.5);
  padding: 30rpx 160rpx 30rpx 30rpx;
  z-index: 2;
  box-sizing: border-box;
}

.play_header .header_album{
  width: 160rpx;
  height: 160rpx;
  /* background-color: pink; */
}
 .play_header .play_header_txt{
  flex: auto;
  margin-left:30rpx; 
  overflow: hidden;
  /* 上下居中 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-box-pack: center;
  
}
 .play_header .play_header_txt text{
  display: block;
  color: #fff;
}
 .play_header .play_header_txt .song_name{
  font-size: 38rpx;
  line-height: 57rpx;
}
 .play_header .play_header_txt .singer{
  font-size: 30rpx;
  color: #ffffff
}
.main_box .play_header .icon{
position:absolute;
width:88rpx;
height:88rpx;
right:60rpx;
top:50%;
margin-top:-45rpx;
border-radius:50%;
border:3rpx solid #fff;
background-image:url("../../images/sprite_play.png");
/*点击后  y:-340rpx */
background-position:34rpx -402rpx;
background-size:110%;
background-repeat: no-repeat;

}

/* 中间 */
.main_box .lyric{
  background-color: pink;
  position: relative;
  z-index: 2; 
  width: 100%;
  height: 610rpx;
  font-size: 24rpx;
  color: #808080;
} 

/* 底部 */
.play_footer{
  position: absolute;
  width: 100%;
  bottom: 0rpx;
  z-index: 3;
  
}
.control{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.control .time{
  margin: 0 10rpx;
  font-size: 30rpx;
  color: #ccc;
}

.control .bar{
  flex: auto;
  height: 4rpx;
  background: #ccc;
  margin:20rpx;
}
 .control .bar .bar_child{
  width: 10%;
  height: 100%;
  background: #31c27c;
 }
 .download_btn{
   text-align: center;
   height: 90rpx;
   margin: 40rpx 100rpx;
   border-radius: 999rpx;
   background-color: #31c27c;
 }
 .download_btn .download_btn_txt{
  color: #fff;
  line-height: 90rpx;
}
.play_footer .icon{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  /* background-color: green; */
}
.play_footer .icon_list{
  left:50rpx;
  top:-100rpx;
  background-image:url("../../images/sprite_play.png");
  background-position:13rpx -507rpx;
  background-size:110%;
  background-repeat: no-repeat;
}
.play_footer .icon_like{
  top:-100rpx;
  right:50rpx;
  background-image:url("../../images/sprite_play.png");
  /* 点击后  y：-42 */
  background-position:13rpx 15rpx;
  background-size:110%;
  background-repeat: no-repeat;

}

