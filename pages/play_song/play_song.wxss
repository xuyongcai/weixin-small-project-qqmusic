/* 头部  */
.play_header{
  position: relative;
  width: 100%;
  display: flex;
  background: rgba(0, 0, 0, 0.5);
  padding: 30rpx 160rpx 30rpx 30rpx;
  z-index: 3;
  box-sizing: border-box;
}

.play_header .header_album{
  width: 160rpx;
  height: 160rpx;
  /* background-color: pink; */
  /* 默认图片 */
  background-image: url("../../images/icon-music.png");
  background-size: 100%;
  background-repeat: no-repeat;
}
 .play_header .play_header_txt{
  flex: auto;
  margin-left:30rpx; 
  overflow: hidden;
  /* 上下居中 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-box-pack: center;
  
}
 .play_header .play_header_txt .song_name{
  display: block;
  font-size: 38rpx;
  line-height: 57rpx;
  color: #fff;
}
 .play_header .play_header_txt .singer_box{
  font-size: 30rpx;
  color: #fff;
  /* 溢出省略 */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
 }
