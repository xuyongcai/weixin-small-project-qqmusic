.bg{
  background-color: #f4f4f4;
}
.content_wrap{
  padding:20rpx;
}
/* 导航 */
.nav{
  display: flex;
}
.nav text{
  display: block;
  text-align: center;
  font-size: 36rpx;
  flex: auto;
  padding: 25rpx 0;
}
.nav text.cur{
  border-bottom: 3rpx solid #31c27c;
  color:#31c27c; 
}
/* 轮播 */
 swiper{
   height: 350rpx;
} 
swiper .slide-image{
  width: 100%;
  height: 370rpx;
}
/* 电台,热门歌单 */
.list_title{
  display: block;
  margin-bottom: 32rpx;
  font-size: 36rpx;
}

.song_list .song_item{
  float: left;
  width: calc(50% - 10rpx); 
  background-color: #fff;
  margin-bottom: 45rpx;
}
.song_list .song_item:nth-child(2n){
  margin-left: 20rpx; 
} 
.song_list .song_item image{
  width: 100%;
  height: 350rpx; 
}
.song_list .song_item .item_title{
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: 10rpx;
}
.song_list .song_item .song_list_desc{
   margin-bottom:40rpx;
}
.song_list .song_item .song_list_author{
   margin-bottom:10rpx;
}




/* 排行榜 */
.search_box .topic_item{
  margin-bottom: 20rpx;
  background-color: #fff;
  display: flex;
  position: relative
}
.search_box .topic_item .arrow{
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translateY(-50%);
}
.search_box .topic_item .topic_pic{
  flex: none;
  width: 200rpx;
  height: 200rpx;
}
.search_box .topic_item .topic_pic image{
   width:100%; 
   height: 100%
}
.search_box .topic_item .topic_info{
   margin: 10rpx 30rpx;
   overflow: hidden;
}
.search_box .topic_item .topic_info .title{
  font-size: 32rpx;
  display: block;
  margin-bottom: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.search_box .topic_item .topic_info .song_info{
  font-size: 28rpx;
  color: #7f7f7f;
  line-height: 46rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.search_box .topic_item .topic_info .song_info .song_name{
  margin-left: 20rpx;
  color: #000;
}
.footer{
  font-size: 30rpx;
  color: #636363;
  text-align: center;
  display: block;
  margin: 45rpx 0;
}