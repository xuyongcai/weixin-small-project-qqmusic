/* 头部 */
.head_box{
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  border-bottom: 1rpx solid #ccc;
  width: 100%;
  height: 750rpx;
   /* background-color: #020;  */
}
.head_box .head_title{
  position: absolute;
  z-index: 3;
  bottom: 0;
  padding: 0 40rpx 60rpx 40rpx;
  width: 100%;
  box-sizing: border-box;
}
.head_box .head_title text{
  display: block;
}
.head_box .head_title image{
  position: absolute;
  top: 0;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
   /* background-color: orange;  */
}
.head_box .head_title .title{
  font-size: 50rpx;
  line-height: 75rpx;
}
.head_box .head_title .time{
  font-size: 30rpx;
}
.head_box .mask{
  position: absolute;
  z-index: 2;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 750rpx;
  background: linear-gradient(to bottom,transparent,#000);
}
.head_box .mask1{
  position: absolute;
  z-index: 1;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 750rpx;
}

/* 歌曲列表 */
.song_item{
  display: flex;
}
.song_item .num{
  align-self: center; 
  margin: 0 50rpx;
}
.song_item .song_info{
  width: 100%;
  padding: 20rpx 25rpx 20rpx 0;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
}
.song_item .song_info .song_name{
  display: block;
  font-size: 38rpx;
  line-height: 57rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.song_item .song_info .singer{
  font-size: 30rpx;
  color: #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
